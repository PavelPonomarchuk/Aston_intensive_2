<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".challenge1_2B.ChallengeActivity1Part2B">

    <Button
        android:id="@+id/challenge1_2b_btn_toast"
        android:layout_width="478dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/purple_200"
        android:text="@string/challenge1_2a_btn_label_toast"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/challenge1_2b_btn_count"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/challenge1_2b_btn_count"
        android:layout_width="479dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/purple_200"
        android:text="@string/challenge1_2a_btn_label_count"
        android:textColor="@color/black"
        android:textSize="60sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/challenge1_2b_btn_toast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/challenge1_2b_btn_toast" />

    <TextView
        android:id="@+id/challenge1_2b_tv_show_count"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:background="@color/challenge1_2a_tv_color"
        android:gravity="center"
        android:text="@string/challenge1_2a_count_initial_value"
        android:textColor="@color/purple_500"
        android:textSize="200sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/challenge1_2b_btn_toast" />

</androidx.constraintlayout.widget.ConstraintLayout>
